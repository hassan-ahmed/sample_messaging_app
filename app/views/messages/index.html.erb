<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.user.email %></td>
        <td><%= message.text %></td>
        <td><%= link_to 'Show', [@ad, message] %></td>
        <td><%= link_to 'Edit', edit_ad_message_path(@ad, message) %></td>
        <td><%= link_to 'Destroy', [@ad, message], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_ad_message_path(@ad) %>
